@model SIIS.Models.Composicao

@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.Indice)

<div class="row boxComposicao" style="">
    <label style="color: rgb(164, 231, 236)">Composição</label>
    <hr style="margin-top: 5px;" />
    <div class="form-group">
        <div class="col-md-5">
            <label class="control-label">Descrição da Composição</label>
            @Html.TextAreaFor(x => x.Descricao, new
            {
                @placeholder = "Define se é um Exame ou uma Consulta, por exemplo.",
                @class = "form-control"
            })
        </div>
        <div class="col-md-7">
            <div id="divPreencherSessoes_@Model.Indice">
                @Html.EditorFor(x => x.Secoes)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            <button type="button" class="btn btn-sm btn-link" onclick="RemoveComposicao('@Model.Id')">
                <span class=" glyphicon glyphicon-remove">
                </span> Remover esta Composição
            </button>
        </div>
        <div class="col-md-7 boxSecao" style="margin-bottom: 10px; padding-top: 0;">
            <button type="button" class="btn btn-sm btn-link" onclick="AddSecao('@Model.Id')">
                <span class="glyphicon glyphicon-plus"></span> Nova Seção
            </button>
        </div>
    </div>
</div>
