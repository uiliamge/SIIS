@model SIIS.Models.Responsavel
@{
    ViewBag.Title = "Registro de Usuário";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("EditarResponsavel", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.UserId)
    @Html.HiddenFor(x => x.Ip)
    
    @Html.AntiForgeryToken()
    <h4>Registrando-se como um Profissional de Saúde.</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        </div>
        <div class="col-md-6" style="padding-top: 5px;">
            @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = true })
        </div>
        <div class="col-md-6" style="padding-top: 5px;">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CpfCnpj, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.CpfCnpj, new { @class = "cpfCnpj form-control" })
        </div>
        <div class="col-md-6" style="padding-top: 5px;">
            @Html.ValidationMessageFor(m => m.CpfCnpj, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telefone, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Telefone, new { @class = "telefone form-control" })
        </div>
        <div class="col-md-6" style="padding-top: 5px;">
            @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "text-danger" })
        </div>
    </div>

    <label id="validationCep" class="col-md-offset-2 text-danger control-label" style="display: none"></label>
    @Html.ValidationMessageFor(m => m.Cep, "", new { @class = "col-md-offset-2 text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Endereço</label>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Cep, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Cep, new { @class = "cep form-control" })

        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Cidade, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control", @maxlength = "200", @readonly = true })
        </div>
        <div class="col-md-1">
            @Html.LabelFor(m => m.Uf, new { @class = "control-label" })
            @Html.HiddenFor(m => m.Uf)
            @Html.DropDownList("Uf", null, new { @class = "form-control", @disabled = true })
        </div>
        <div class="col-md-offset-2 col-md-3">
            @Html.LabelFor(m => m.Bairro, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Bairro, new { @class = "form-control", @maxlength = "200", @readonly = true })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Endereco, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Endereco, new { @class = "form-control", @maxlength = "200", @readonly = true })
        </div>
        <div class="col-md-1">
            @Html.LabelFor(m => m.NumeroEndereco, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.NumeroEndereco, new { @class = "form-control", @maxlength = "10" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(m => m.Complemento, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Complemento, new { @class = "form-control", @maxlength = "10" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumeroConselhoRegional, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.NumeroConselhoRegional, new { @class = "form-control" })
        </div>
        <div class="col-md-6" style="padding-top: 5px;">
            @Html.ValidationMessageFor(m => m.NumeroConselhoRegional, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SiglaConselhoRegional, new { @class = "col-md-2 control-label" })
        <div class="col-md-1">
            @Html.DropDownList("SiglaConselhoRegional", null, new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.UfConselhoRegional, new { @class = "col-md-1 control-label" })
        <div class="col-md-1">
            @Html.DropDownList("UfConselhoRegional", null, new { @class = "form-control" })
        </div>
        <div class="col-md-6" style="padding-top: 5px;">
            @Html.ValidationMessageFor(m => m.SiglaConselhoRegional, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(m => m.UfConselhoRegional, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Salvar Dados Cadastrais" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
